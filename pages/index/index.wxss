/**index.wxss**/
.container{
  position: relative;
  width: 100%;
  height: 100%;
  padding:0;
  margin:0;
  padding-top:580rpx;
}
.top_bg{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  z-index:0;
}
.top_bg image{
  width: 750rpx;
  height: 926rpx;
}
.h3_title{
  position: absolute;
  width: 100%;
  text-align: center;
  z-index:10;
  top:30rpx;
  height: auto;
}
.h3_title image{
  width: 600rpx;
  height: 174rpx;
}
.rotate{
  position: absolute;
  z-index:10;
  width: 374rpx;
  height: 374rpx;
  top: 210rpx;
  left: 25%;
}
/*指针旋转*/
@-webkit-keyframes rotate{
	from{ -webkit-transform: rotate(0);}
	to{-webkit-transform: rotate(360deg);}
}
@keyframes rotate{
	from{ transform: rotate(0);}
	to{transform: rotate(360deg);}
}
.rotate .rotate_1{
  width: 374rpx;
  height: 374rpx;
  -webkit-animation: rotate 20s linear infinite;
  animation: rotate 20s linear infinite;
}
.rotate .rotate_2{
  position: absolute;
  width: 294rpx;
  height: 294rpx;
  top: 40rpx;
  left: 40rpx;
}
.rotate .rotate_3{
  position: absolute;
  width: 187rpx;
  height: 187rpx;
  top: 25%;
  left: 25%;
  -webkit-animation: rotate 3s linear infinite;
  animation: rotate 3s linear infinite;
}
.h3_text{
  color:#fff;
  font-size: 40rpx;
  position: relative;
  margin-bottom:20rpx;
}
.getStock{
  position: relative;
}
form input{
  width:600rpx;
  height: 80rpx;
  margin:0 auto;
  background-color:#fff;
  padding-left:15rpx;
  border-radius:10rpx;
  color: #1b1b1b;
}
form button{
  width:600rpx;
  height: 90rpx;
  border-radius: 45rpx;
  margin:20rpx auto;
  background-color: #ef8717; 
  color:#fff;
  line-height: 90rpx;
}
button:after{
  border:none
}
.dialog{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color:rgba(0,0,0,0.7);
  z-index:100;
}
.dialog .content{
  width: 650rpx;
  height: 400rpx;
  margin:200rpx auto;
  border:4px solid #0988f2;
  background-color:#0988f2;
  z-index:100;
  text-align: center;
  line-height: 60rpx;
  padding:40rpx 20rpx;
  color: #fff;
}
.dialog .content text{
  font-size: 40rpx;
}
.dialog .content.progress{
  height: 200rpx;
}
.dialog progress{
  margin:40rpx;
}
.dialog input{
  margin-top:40rpx;
  text-align: left;
}
.points{
  position: relative;
  margin-top: 75rpx;
  padding-bottom: 40rpx;
}
.points ul{
  display: flex;
  display: -webkit-flex;
}
.points ul li{
  width: 33.33%;
}
.points ul li rich-text{
  font-size: 28rpx;
  text-align: center;
}
.points ul li image{
  width: 100rpx;
  height: 100rpx;
  display: block;
  margin:10rpx auto;
}
.else{
  position: relative;
  background-color: #eeeeee;
  padding-top: 40rpx;
}
.else image{
  width: 750rpx;
  height: 1254rpx;
}